screen translation_confirm:


    on "show" action Function(clack_play_albert)

    modal True

    zorder 200

    style_prefix "confirm"

    add "gui/overlay/confirm.png"

    frame:

        has vbox:
            xalign .5
            yalign .5
            spacing 30

        label _("Are you sure you want me to speak this language?"):
            style "confirm_prompt"
            xalign 0.5

        add "albert_face_complete" xalign 0.5

        hbox:
            xalign 0.5
            spacing 100

            textbutton _("Yes") action [Hide("translation_confirm"), Jump("finish_lang_selection")]
            if persistent.lang != None:
                textbutton _("No") action [Hide("translation_confirm"), Language(None)]
            else:
                textbutton _("No") action Hide("translation_confirm")

label finish_lang_selection:

    $ persistent.select_lang = True
    jump splashscreen
